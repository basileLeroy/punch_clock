<?xml version="1.0" encoding="UTF-8"?>
<XMLDB PATH="mod/punchclock/db" VERSION="2025030700" COMMENT="Moodle Punch Clock Database Schema">

    <TABLES>
        <!-- Punch Clock Table -->
        <TABLE NAME="mdl_punch_clock" COMMENT="Stores punch clock instances for courses">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
                <FIELD NAME="course_id" TYPE="int" LENGTH="10" NOTNULL="true" />
                <FIELD NAME="start_date" TYPE="bigint" LENGTH="10" NOTNULL="true" />
                <FIELD NAME="end_date" TYPE="bigint" LENGTH="10" NOTNULL="true" />
                <FIELD NAME="created_at" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" />
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
                <KEY NAME="course_fk" TYPE="foreign" FIELDS="course_id" REFTABLE="mdl_course"
                    REFFIELDS="id" ONDELETE="cascade" />
            </KEYS>
        </TABLE>

        <!-- Punch Clock Exceptions -->
        <TABLE NAME="mdl_punch_clock_exceptions"
            COMMENT="Stores exceptions for punch clock instances">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
                <FIELD NAME="course_id" TYPE="int" LENGTH="10" NOTNULL="true" />
                <FIELD NAME="start_date" TYPE="bigint" LENGTH="10" NOTNULL="true" />
                <FIELD NAME="end_date" TYPE="bigint" LENGTH="10" NOTNULL="true" />
                <FIELD NAME="reason" TYPE="text" NOTNULL="true" />
                <FIELD NAME="created_at" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" />
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
                <KEY NAME="course_fk" TYPE="foreign" FIELDS="course_id" REFTABLE="mdl_punch_clock"
                    REFFIELDS="id" ONDELETE="cascade" />
            </KEYS>
        </TABLE>

        <!-- Punch Clock Statuses -->
        <TABLE NAME="mdl_punch_clock_statuses" COMMENT="Stores possible attendance statuses">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
                <FIELD NAME="status" TYPE="varchar" LENGTH="50" NOTNULL="true" UNIQUE="true" />
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
            </KEYS>
        </TABLE>

        <!-- Punch Clock Sessions -->
        <TABLE NAME="mdl_punch_clock_sessions" COMMENT="Tracks user clock-in and clock-out sessions">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
                <FIELD NAME="user_id" TYPE="int" LENGTH="10" NOTNULL="true" />
                <FIELD NAME="course_instance_id" TYPE="int" LENGTH="10" NOTNULL="true" />
                <FIELD NAME="checkin_a" TYPE="bigint" LENGTH="10" NOTNULL="true" />
                <FIELD NAME="checkout_a" TYPE="bigint" LENGTH="10" NULL="true" />
                <FIELD NAME="checkin_b" TYPE="bigint" LENGTH="10" NULL="true" />
                <FIELD NAME="checkout_b" TYPE="bigint" LENGTH="10" NULL="true" />
                <FIELD NAME="status_id" TYPE="int" LENGTH="10" NOTNULL="true" />
                <FIELD NAME="created_at" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" />
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
                <KEY NAME="user_fk" TYPE="foreign" FIELDS="user_id" REFTABLE="mdl_user"
                    REFFIELDS="id" ONDELETE="cascade" />
                <KEY NAME="course_fk" TYPE="foreign" FIELDS="course_instance_id"
                    REFTABLE="mdl_punch_clock" REFFIELDS="id" ONDELETE="cascade" />
                <KEY NAME="status_fk" TYPE="foreign" FIELDS="status_id"
                    REFTABLE="mdl_punch_clock_statuses" REFFIELDS="id" />
            </KEYS>
        </TABLE>

        <!-- Punch Clock Logs -->
        <TABLE NAME="mdl_punch_clock_logs"
            COMMENT="Stores logs of user actions in punch clock sessions">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
                <FIELD NAME="user_id" TYPE="int" LENGTH="10" NOTNULL="true" />
                <FIELD NAME="session_id" TYPE="int" LENGTH="10" NOTNULL="true" />
                <FIELD NAME="timestamp" TYPE="bigint" LENGTH="10" NOTNULL="true" />
                <FIELD NAME="message" TYPE="text" NOTNULL="true" />
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
                <KEY NAME="user_fk" TYPE="foreign" FIELDS="user_id" REFTABLE="mdl_user"
                    REFFIELDS="id" ONDELETE="cascade" />
                <KEY NAME="session_fk" TYPE="foreign" FIELDS="session_id"
                    REFTABLE="mdl_punch_clock_sessions" REFFIELDS="id" ONDELETE="cascade" />
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>