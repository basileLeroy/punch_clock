{{!
    @template mod_punchclock/view


    Example context (json):
    {
    }
}}
<section class="py-5">
	<div class="container">
		<div class="row justify-content-center text-center mb-4">
			<div class="col-lg-8 col-xxl-7">
				<span class="text-muted">{{greetingMessage}}!</span>
				<h2 class="display-5 fw-bold">{{currentDate}}</h2>
				<p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Soluta harum ipsum venenatis metus sem veniam eveniet aperiam suscipit.</p>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<div class="text-center position-relative">
					<button 
							id="punchclock-button-morning-start" 
							data-courseid="{{courseid}}" 
							data-punchclockid="{{punchclockid}}" 
							data-type="morning-start" 
							class="step-icon mx-auto bg-primary border rounded-circle d-flex align-items-center justify-content-center position-relative" style="width:120px;height:120px;" >
            <p id="clock-morning-start" class="clock-updated text-white h3 m-0 p-0"></p>
					</button>
					<h4 class="mt-3 fs-5">Morning</h4>
					<p id="punchclock-message"></p>
					<div class="arrow-icon position-absolute d-none d-lg-block" style="top:50px; right:-25px">
						<svg class="bi bi-arrow-right" fill="currentColor" height="30" viewbox="0 0 16 16" width="30" xmlns="http://www.w3.org/2000/svg">
						<path d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" fill-rule="evenodd"></path></svg>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="text-center position-relative">
					<button class="step-icon position-relative mx-auto bg-warning border rounded-circle d-flex align-items-center justify-content-center" style="width: 120px;height: 120px;">
            <p class="text-white h3 m-0 p-0">--:--</p>
					</button>
          <h4 class="mt-3 fs-5">Lunch</h4>
					<div class="arrow-icon d-none d-lg-block position-absolute" style="top:50px; right:-25px">
						<svg class="bi bi-arrow-right" fill="currentColor" height="30" viewbox="0 0 16 16" width="30" xmlns="http://www.w3.org/2000/svg">
						<path d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" fill-rule="evenodd"></path></svg>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="text-center position-relative">
					<button id="punchclock-button-afternoon-start" data-courseid="{{courseid}}" data-punchclockid="{{punchclockid}}" data-type="afternoon-start" class="step-icon position-relative mx-auto bg-secondary border rounded-circle d-flex align-items-center justify-content-center" style="width: 120px;height: 120px;">
            <p id="clock-afternoon-start" class="clock-updated text-white h3 m-0 p-0">--:--</p>
					</button>
          <h4 class="mt-3 fs-5">Afternoon</h4>
					<p id="punchclock-message-afternoon"></p>
					<div class="arrow-icon d-none d-lg-block position-absolute" style="top:50px; right:-25px">
						<svg class="bi bi-arrow-right" fill="currentColor" height="30" viewbox="0 0 16 16" width="30" xmlns="http://www.w3.org/2000/svg">
						<path d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" fill-rule="evenodd"></path></svg>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="text-center position-relative">
					<button class="step-icon position-relative mx-auto bg-secondary border rounded-circle d-flex align-items-center justify-content-center" style="width: 120px;height: 120px;">
            <p class="text-white h3 m-0 p-0">--:--</p>
					</button>
          <h4 class="mt-3 fs-5">End of Day</h4>
				</div>
			</div>
		</div>
	</div>
</section>