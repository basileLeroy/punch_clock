{{!
    @template mod_punchclock/components/filterbar


    Example context (json):
    {
    }
}}
<div class="attfiltercontrols mb-3">
    <div class="d-flex flex-wrap w-100 justify-content-between align-items-center">
        <div class="viewcontrols p-2 ms-auto">
            <div>
                {{#buttons}}
                    {{^active}}
                        <a href="{{{url}}}">
                            <button class="{{class}}">
                                {{text}}
                            </button>
                        </a>
                    {{/active}}
                    {{#active}}
                        <span class="{{class}}">
                            {{text}}
                        </span>
                    {{/active}}
                {{/buttons}}
            </div>
        </div>
    </div>
</div>
